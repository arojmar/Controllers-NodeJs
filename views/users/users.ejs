<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <% include ../common/head.ejs %>
</head>
<body>
    <header>
        <% include ../common/navbar.ejs %>
    </header>
    <main>
        <div class="container py-4">
            <h1 class="display-4 text-center">Users List</h1>
            <div class="row d-flex align-items-center justify-content-center">
              <% resultList.forEach(user => { %>
              <div class="p-4">
                  <div class="card" style="width: 18rem;">
                     <div class="card-body text-center">
                      <h5 class="card-title"><%= user.name %></h5>
                      <p class="card-text"><%- user.last_name %></p>
                      <p class="card-text pb-3"><%- user.phone %></p>
                      <p class="card-text pb-3"><%- user.address %></p>
                      <div class="buttony d-flex justify-content-around">
                        <div class="d-block">
                          <a href="/users/editUser/<%= user.id_user %>" 
                             class="btn btn-primary">Modify</a>
                        </div>
                        <div class="d-block">
                          <a href="/users/removeUser/<%= user.id_user %>"
                             class="btn btn-danger">Delete</a>
                        </div> 
                      </div>
                    </div>
                  </div>
              </div>
              <% }); %>
            </div>
          </div>
    </main>
    <% include ../common/footer.ejs %>
</body>
</html>